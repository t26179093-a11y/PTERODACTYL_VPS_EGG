  "scripts": {
    "installation": {
      "script": "#!/bin/bash\ncd /mnt/server\ngit clone https://github.com/t26179093-a11y/PTERODACTYL_VPS_EGG.git .\nchmod +x install.sh vm.sh\nbash install.sh",
      "container": "debian:bookworm-slim",
      "entrypoint": "bash"
    }
  },
  "variables": [
    {
      "name": "RAM",
      "description": "RAM für die VM (MB)",
      "env_variable": "RAM",
      "default_value": "2048",
      "user_viewable": true,
      "user_editable": true,
      "rules": "required|integer|min:512|max:16384"
    },
    {
      "name": "CPU",
      "description": "CPU-Kerne für die VM",
      "env_variable": "CPU",
      "default_value": "1",
      "user_viewable": true,
      "user_editable": true,
      "rules": "required|integer|min:1|max:16"
    },
    {
      "name": "DISK",
      "description": "Festplattengröße (GB)",
      "env_variable": "DISK",
      "default_value": "20",
      "user_viewable": true,
      "user_editable": true,
      "rules": "required|integer|min:5|max:200"
    }
  ]
