{
  "_comment": "Auto VM Egg für Pterodactyl",
  "meta": {
    "version": "PTDL_v2",
    "update_url": null
  },
  "exported_at": "2025-10-26T00:00:00+00:00",
  "name": "Auto VM Multi-Linux",
  "author": "realtvalexfncloud@gmail.com",
  "description": "Starte automatisch verschiedene Linux-Distributionen (27 Distros) in Pterodactyl mit QEMU & sshx.io.",
  "features": null,
  "docker_images": {
    "Debian 12": "debian:bookworm",
    "Ubuntu 24.04": "ubuntu:24.04"
  },
  "file_denylist": [],
  "startup": "./install.sh",
  "config": {
    "files": "{}",
    "startup": "{\r\n    \"done\": \"Starte VM\"\r\n}",
    "logs": "{}",
    "stop": "pkill qemu-system-x86_64"
  },
  "scripts": {
    "installation": {
      "script": "#!/bin/bash\ncd /mnt/server\nbash install.sh",
      "container": "debian:bookworm-slim",
      "entrypoint": "bash"
    }
  },
  "variables": [
    {
      "name": "RAM",
      "description": "RAM für die VM (MB)",
      "env_variable": "RAM",
      "default_value": "2048",
      "user_viewable": true,
      "user_editable": true,
      "rules": "required|integer|min:512|max:16384"
    },
    {
      "name": "CPU",
      "description": "CPU-Kerne für die VM",
      "env_variable": "CPU",
      "default_value": "1",
      "user_viewable": true,
      "user_editable": true,
      "rules": "required|integer|min:1|max:16"
    },
    {
      "name": "DISK",
      "description": "Festplattengröße (GB)",
      "env_variable": "DISK",
      "default_value": "20",
      "user_viewable": true,
      "user_editable": true,
      "rules": "required|integer|min:5|max:200"
    }
  ]
}
